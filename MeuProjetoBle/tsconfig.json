{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
     "module": "Node16",
    "jsx": "react-native",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true
  },
  "include": [
    "app",
    "index.ts",
    "index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
